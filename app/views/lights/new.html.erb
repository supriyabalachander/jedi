<form id="form-create-light" action="/users" method="post">
  <h1 class="form-create-heading">Create your Jedi name!</h1>
  <input type="text" name="user[username]" placeholder="Username" required autofocus>
  <input type="hidden" name="user[light_dark]" value="true">
  <a href="/questions/people"><input type="submit" value="Create Jedi"></a>
  <p>Already a player?</p>
</form>

<div class="lightsaber">
  <%= image_tag ("lightsaber.png"), class: 'lightsaber' %>
</div>
